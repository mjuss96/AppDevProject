<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/colorWhite" />
            <stroke
                android:width="3dp"
                android:color="@color/colorPrimaryDark" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="12dp"
                android:right="12dp"/>
        </shape>

    </item>
